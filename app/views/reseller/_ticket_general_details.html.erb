<td valign="top" class="bgcolor2"><script language="javascript" type="text/javascript">
  function ShowDiv(id1, id2)
  { 
    window.document.getElementById(id1).style.display = "block";
    window.document.getElementById(id2).style.display = "none";
    window.document.getElementById('divGSedit').style.display = "none"; 
  }
  </script>
  <div style="height: 100%;" id="content">
    <table cellspacing="0" cellpadding="0" border="0" width="100%">
      <tbody>
        <tr>
          <td class="middle_top">
            <table cellspacing="0" cellpadding="0" border="0" width="100%">
              <tbody>
                <tr>
                  <td colspan="2">
                    <span class="bodytext_1">
                      <a class="bodylink" href="index.php?cid=4&amp;action=UVP">Home</a> 
                      &gt; <a class="bodylink" href="index.php?cid=31&amp;action=CTM&amp;left=3">Ticket Manager</a> 
                      &gt; <a class="bodylink" href="index.php?cid=31&amp;action=CTM&amp;cat=Support&amp;st=1&amp;left=3">Support Ticket</a>  
                      &gt;  Ticket Details  
                    </span>
                  </td>
                </tr>
                <tr>
                  <td width="4%">
                    <img border="0" align="bottom" width="30" height="32" title="View VM" src="/images/ticket_b.png">
                  </td>
                  <td width="96%" valign="top" style="padding-top:2px">
                    <span class="txt_big_red">Ticket ID #<%= @ticket.id %></span>
                  </td>
                </tr>

                <tr>
                  <td width="4%">&nbsp;</td>
                  <td width="96%" valign="top" style="padding-top:2px">
                    <span class="bodytext_1">
                      <%= link_to @ticket.user.name,reseller_index_path %>
                    </span> 
                    &nbsp;&nbsp;&nbsp;&nbsp;<span class="txt_big_red"> <%= @ticket.ticket_type %>  </span>
                    &nbsp;&nbsp;&nbsp;&nbsp;<img title="In Progress" src="/images/<%= @ticket.status_image %>">
                    <span class="Stopped"><%= @ticket.status %></span>
                    &nbsp;&nbsp;&nbsp;&nbsp;<span class="txt_big_red"><%= @ticket.priority %></span>					
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
    <%= render :partial=>'ticket_tabs' %>    
    <div class="show" style="height: 100%;" id="General">
      <div id="divGS">
        <table cellspacing="1" cellpadding="0" border="0" width="70%" class="bgcolor3"> 
          <tbody>
            <tr>
              <td align="left" width="20%" class="cate_listing_head">User</td>
              <td align="right" width="80%" height="26" class="cate_listing_head">Contents</td>
            </tr>	
            <tr>
              <td align="left" width="20%" valign="top" class="bgcolor4"><strong><%= @ticket.user.name %></strong></td>
              <td align="right" width="80%" height="26" class="bgcolor4">
                <table cellspacing="1" cellpadding="0" border="0" width="100%"> 
                  <tbody>
                    <tr>
                      <td align="left" class="btm_border">Posted on: <%= @ticket.created_at.strftime("%d/%m/%Y") %></td> 
                    </tr>	
                    <tr>
                      <td align="left">
                        <p><%= @ticket.subject %></p>
                      </td> 
                    </tr>	
                  </tbody>
                </table>
              </td>
            </tr>
            <%= render :partial=>'ticket_detail',:collection=>@ticket.ticket_details%>
          </tbody>
        </table> 
        <br>
        <div style="display: none;" id="divGSedit">															 
        </div>
      </div>
      <div class="hide" style="height: 100%;" id="Post Reply"> 
        <div id="divRes">
        </div> 
        <div style="display: none;" id="divEditRes">
        </div>
      </div>
      <div class="hide" style="height: 100%;" id="Add Notes">
        <div id="divNotes">
        </div>
        <div style="display: none;" id="divEditNotes">
        </div>
      </div>
      <div class="hide" style="height: 100%;" id="Ticket History">
        <div id="divHist">
        </div>
        <div style="display: none;" id="divEditHist">
        </div>
      </div>
    </div>
  </div>
</td>
