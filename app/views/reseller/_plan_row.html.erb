<tr>
  <td width="35%" valign="top" align="right" class="cate_listing">
    <%= plan_row['title'] %>
  </td>
  <td valign="top" nowrap="nowrap" align="right" class="cate_listing">
    <%= plan_row['vps'] %> VPS
  </td>
  <td width="65%" valign="top" class="bgcolor4">
    <table width="100%" cellspacing="0" cellpadding="0" border="0">
      <tbody>
        <tr valign="middle" align="left">
          <td>$<%= plan_row['rec_period'] %> / <%= plan_row['month'] if plan_row['month'] > 1 %> <%= plan_row['period'] %></td> 
          <td align="right">
            <%= link_to(image_tag("/images_new/purchase_bt.gif",:width=>103,:height=>25,:border=>0,:id=>"Purchase3",:name=>"purchase2"),{:action=>'payment_selection',:plan_id=>plan_row['plan_id'],:plantype=>plan_row['plan_type']}) %>
          </td>
        </tr>
      </tbody>
    </table>
  </td>
</tr>
